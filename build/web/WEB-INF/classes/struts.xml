<!DOCTYPE struts PUBLIC
"-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
"http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>
    <include file="example.xml"/>
    <!-- Configuration for the default package. -->
    <package name="default" extends="struts-default">
        <action name="login" class="com.pmt.login.LoginAction">
            <result name="success">/pages/spot/spot_investigation.jsp</result>
            <result name="error">/pages/login/login.jsp</result>
        </action>
        <action name="addSpot" class="com.pmt.spot_investigation.AddSpotInvestigationAction">
            <interceptor-ref name="token" />
            <interceptor-ref name="basicStack"/>
            <result name="success">/pages/spot/spot_investigation.jsp</result>
            <result name="invalid.token">/pages/spot/spot_investigation.jsp</result>
        </action>
        <action name="viewSpot" class="com.pmt.spot_investigation.AddSpotInvestigationFormAction">
            <result name="success">/pages/spot/add_spot_investigation.jsp</result>
        </action>
        <action name="spotPrint" class="com.pmt.spot_investigation.PrintSpotInvestigationAction">           
            <result name="success">/pages/spot/print_spot_investigation.jsp</result>
        </action>
        <action name="viewSpotUpdate" class="com.pmt.spot_investigation.UpdateSpotInvestigatioFormAction">
            <result name="success">/pages/spot/update_spot_investigation.jsp</result>
        </action>
        
        <action name="spotDelete" class="com.pmt.spot_investigation.DeleteSpotInvestigationAction">
            <interceptor-ref name="token" />
            <interceptor-ref name="basicStack"/>
            <result name="success">/pages/spot/spot_investigation.jsp</result>
            <result name="invalid.token">/pages/spot/spot_investigation.jsp</result>
        </action>
        
        <action name="UpdateSpot" class="com.pmt.spot_investigation.UpdateSpotInvestigationAction">   
            <result name="success">/pages/spot/spot_investigation.jsp</result>     
        </action>     
    </package>
    
</struts>
